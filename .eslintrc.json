{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-var": "error",
        "camelcase": [
            "error",
            {
                "properties": "always"
            }
        ],
        "no-useless-escape": 0,
        "no-unneeded-ternary": 0,
        "indent": ["error", 2, { "MemberExpression": 1 }],
        "no-tabs": 0
    }
}